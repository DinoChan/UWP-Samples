<Window x:Class="PathDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="825">
    <Grid>
        <Grid Width="1000"
              Height="200">
            <local:MyPath x:Name="Path"
                  Fill="Red" Width="1000" Height="200"
                  Stroke="Red"
                  StrokeThickness="1"  />
        </Grid>
        <Button Content="ChangeSize" Click="OnChangeSize" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
